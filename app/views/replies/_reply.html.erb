<%= form_for @reply, url: {action: "create"}, remote: true, html: {class:"ui form"} do |f| %>
  <div class="field">
    <%= f.text_area :body, id: "reply-message", maxlength: "280" , rows: "2",placeholder: "Reply to Tweet ..."  %>
  </div>
    <div class="field">
    <%= f.button :submit, class: "ui teal button" %>
      <label id="num-count"  style="display:inline-block"></label>
    </div>

<% end %>


<!-- spacing -->

<div style="min-height: 10px"></div>
